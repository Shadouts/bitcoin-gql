{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist/",
    "paths": {
      "Classes/*": ["classes/*"],
      "GQLTypeDefs/*": ["gqlTypeDefs/*"],
      "Models/*": ["models/*"],
      "Schema/*": ["schema/*"],
      "Types/*": ["types/*"],
    },
    "skipLibCheck":true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "esnext",
    "types" : [ "node" ],
    "typeRoots": ["node_modules/@types", "src/@types"]
  }
}
